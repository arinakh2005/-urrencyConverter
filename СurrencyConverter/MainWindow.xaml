        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="141*"/>
            <ColumnDefinition Width="253*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush Opacity="0.4" ImageSource="D:\university\III course\Декларативне програмування\СurrencyConverter\СurrencyConverter\Resources\background.png"></ImageBrush>
        </Grid.Background>
        <ComboBox x:Name="to" HorizontalAlignment="Left" Margin="75.333,125,0,0" VerticalAlignment="Top" Width="115" SelectedIndex="1" Grid.Column="1"/>
        <ComboBox x:Name="from" HorizontalAlignment="Left" Margin="75.333,73,0,0" VerticalAlignment="Top" Width="115" SelectedIndex="0" Grid.Column="1"/>
