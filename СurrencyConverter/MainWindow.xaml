        <Button Content="Convert" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Click="Button_Click" FontSize="18" Height="34" Grid.ColumnSpan="2" Margin="136,172,145,65" BorderThickness="2"/>
    </Grid>

</Window>
